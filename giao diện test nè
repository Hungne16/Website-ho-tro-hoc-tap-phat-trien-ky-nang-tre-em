    <script>
        function showTab(tabId) {
            var tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(function(tab) {
                tab.classList.remove('active');
            });
            document.getElementById(tabId).classList.add('active');
        }

        function showAgeGroup(tabId) {
            var ageGroups = document.querySelectorAll('#monhoc .tab-content');
            ageGroups.forEach(function(tab) {
                tab.classList.remove('active');
            });
            document.getElementById(tabId).classList.add('active');
        }

        function showTeacherTab(tabId) {
            var teacherTabs = document.querySelectorAll('#giaovien .tab-content');
            teacherTabs.forEach(function(tab) {
                tab.classList.remove('active');
            });
            document.getElementById(tabId).classList.add('active');
        }

        // Sample data for charts
        var scoreData = {
            labels: ['Môn học 1', 'Môn học 2', 'Môn học 3', 'Môn học 4', 'Môn học 5'],
            datasets: [{
                label: 'Điểm học tập',
                data: [85, 90, 78, 88, 92],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        };

        var progressData = {
            labels: ['Môn học 1', 'Môn học 2', 'Môn học 3', 'Môn học 4', 'Môn học 5'],
            datasets: [{
                label: 'Tiến độ học tập',
                data: [70, 80, 60, 90, 75],
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        };

        window.onload = function() {
            var ctxScore = document.getElementById('scoreChart').getContext('2d');
            var scoreChart = new Chart(ctxScore, {
                type: 'bar',
                data: scoreData,
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            var ctxProgress = document.getElementById('progressChart').getContext('2d');
            var progressChart = new Chart(ctxProgress, {
                type: 'line',
                data: progressData,
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        };
    </script>
